#!/bin/bash

local_dir="$(dirname $0)"
kill $(cat $local_dir/firehose.pid)
rm -rf $local_dir/firehose.pid
bundle install --quiet
bundle exec ruby data.rb >> $local_dir/firehose.log 2>&1 &
echo "$!" >> $local_dir/firehose.pid
echo "$(date) Drinking from the firehose successfully!" >> $local_dir/firehose.log
